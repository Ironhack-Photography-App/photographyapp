<h1 style="display: flex; justify-content: center; align-items: center;">
  Welcome
  {{#if user.name}}
  {{user.name}}
  {{else}}
  {{user.username}}
  {{/if}}
  {{#if user.avatar}}
  <img src="{{user.avatar}}" style="height: 100px; border-radius: 50%; margin-left: 20px">
  {{/if}}
</h1>

{{#unless user}}
<a href="/login">Log in</a>
<a href="/signup">Sign up</a>
{{else}}
<a href="/logout">Log out</a>
{{/unless}}