<h1 style="display: flex; justify-content: center; align-items: center;">
  Welcome
  {{#if user.name}}
  {{user.name}}
  {{else}}
  {{user.username}}
  {{/if}}
  {{#if user.avatar}}
  <img src="{{user.avatar}}" style="height: 100px; border-radius: 50%; margin-left: 20px">
  {{/if}}
</h1>

{{#unless user}}
<header>
  <div class="header">
    <nav>
      <ul>
        <li><a href="/login">Log in</a></li>
        <li><a href="/signup">Sign up</a></li>
      </ul>
    </nav>
  </div>
</header>

<body class='body'>

</body>
{{else}}
<a href="/logout">Log out</a>
{{/unless}}