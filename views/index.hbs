<h1 style="display: flex; justify-content: center; align-items: center;">
  Welcome
  {{#if user.name}}
  {{user.name}}
  {{else}}
  {{user.username}}
  {{/if}}
  {{#if user.avatar}}
  <img src="{{user.avatar}}" style="height: 100px; border-radius: 50%; margin-left: 20px">
  {{/if}}
</h1>

{{#unless user}}
<form action="/signup">
  <button type="submit">Create an account</button>
</form>

<body class='landing-page-body'>

</body>
{{else}}
<a href="/logout">Log out</a>
{{/unless}}

{{#each photographers}}
<p>{{username}}</p>
{{/each}}