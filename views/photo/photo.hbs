<body class="details-body">
  <h1>Photo Details</h1>
  <div class="photo-wrapper">
    {{#if photo}}


    <p>{{photo.description}}</p>

    <div class="photo-item">
      <img class="photo-details-img" src="{{photo.imgPath}}" alt="photo-url">
      {{!-- <a href="/photo/delete/{{this._id}}">❌</a> --}}
    </div>

    <form action="/favorite/{{photo._id}}" method="POST">

      <button class="button">Add to Favorites</button>
    </form>

    {{else}}
    <h3>No photos yet 🤷‍♀️🤷‍ ️</h3>
    {{/if}}
  </div>

  <p>Comments:</p>
  {{#each photo.comment}}
  {{!-- <p>{{owner}}</p> --}}
  <p>{{username.username}}: {{comment}}</p>
  {{/each}}



  <form action="/comment/{{photo._id}}" method="POST">

    <label for="comments">Comments:</label>
    <textarea type="text" name="comments" id="comments"></textarea><br>

    <p><button class="button" type='submit'> Add a comment </button></p>

  </form>

</body>