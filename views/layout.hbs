              </select>
              <div class="btn-group">
                <button class="button" type="submit">Search</button>
              </div>
            </form>
          </li>
          <li><a href="/user-profile">{{user.username}}</a></li>
          <li><a href="/logout">Log out</a></li>
          <li><a href="/dashboard">Home</a></li>
        </ul>

        {{/if}}

      </div>
    </div>
  </header>
